@page
@model SignalRAssignment.Pages.Users.LoginModel

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="LoginAccount.Email" class="control-label"></label>
                <input asp-for="LoginAccount.Email" class="form-control" />
                <span asp-validation-for="LoginAccount.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginAccount.Password" class="control-label"></label>
                <input type="password" asp-for="LoginAccount.Password" class="form-control" />
                <span asp-validation-for="LoginAccount.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
